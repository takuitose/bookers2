<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Log in</h2>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, autofocus: true, class:"name", id:"user_name" %>
        </div>
        <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, autocomplete: "off", class:"password", id:"user_password" %>
        </div>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <div class="actiond">
          <%= f.submit "Log in", class:"btn btn-sm btn-primary" %>
        </div>
      <% end %>
      <%= link_to "Sign up", new_user_registration_path %>
      <br>
    </div>
  </div>
</div>
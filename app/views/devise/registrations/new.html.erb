<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-2 px-5 px-sm-0">
      <h2>Sign up</h2>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name, autofocus: true, class:"name", id:"user_name" %>
          </div>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true, class:"email", id:"user_email" %>
          </div>
          <div class="field">
            <%= f.label :password %> <em>(6 characters minimum)</em><br>
            <%= f.password_field :password, autocomplete: "off", class:"password", id:"user_password" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"password_confirm", id:"user_password_condirmation" %>
          </div>
          <div class="actiond">
            <%= f.submit "Sign up", class:"btn btn-sm btn-success" %>
          </div>
        <% end %>
        <%= link_to "Log in", new_user_session_path %>
        <br>
        <%= link_to "Forgot your password?", new_user_password_path %>
      </div>
    </div>
  </div>
</div>
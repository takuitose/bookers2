<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', books: @books %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thred>
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
            <td colspan="3"></td>
          </tr>
        </thred>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to @user_path do %>
                <%= image_tag @user.get_profile_image(80, 80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
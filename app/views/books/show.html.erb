<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', books: @books %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to @user_path do %>
                <%= image_tag @user.get_profile_image(80, 80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success btn-block"%></td>
            <td><%= link_to "Destroy", destroy_book_path, class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>